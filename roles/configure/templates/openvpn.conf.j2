proto {{ server.proto }}
port {{ server.port }}
dev {{ server.dev }}
server {{ server.network }}
route {{ server.network }}
push "{{ server.network }}"
comp-lzo
keepalive 10 120
float
client-config-dir /etc/openvpn/ccd
max-clients 10
persist-key
persist-tun
log-append {{ server.log }}
verb 6
tls-server
dh /etc/openvpn/certs/dh4096.pem
ca /etc/openvpn/certs/ca.crt
cert /etc/openvpn/certs/server.openvpn.crt
key /etc/openvpn/certs/server.openvpn.key
tls-auth /etc/openvpn/certs/ta.key
status /var/log/openvpn.stats 
script-security 3 
tls-verify "/etc/openvpn/verify-cn /etc/openvpn/allowed_list"
tls-cipher TLS-DHE-RSA-WITH-AES-256-GCM-SHA384:TLS-DHE-RSA-WITH-AES-128-GCM-SHA256:TLS-DHE-RSA-WITH-AES-256-CBC-SHA:TLS-DHE-RSA-WITH-CAMELLIA-256-CBC-SHA:TLS-DHE-RSA-WITH-AES-128-CBC-SHA:TLS-DHE-RSA-WITH-CAMELLIA-128-CBC-SHA
